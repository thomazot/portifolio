    "gh-pages": "^6.1.1",
    "next": "14.2.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.3",
    "react-icons": "^5.2.1",
    "resend": "^3.3.0",
    "styled-components": "^6.1.8",
    "ts-node": "^10.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.2",
